@model FileReader.Models.UsersModels
    @{
        ViewBag.Title = "AddUsers";
    }



    <script type="text/javascript">function verifNumber(evt) {
        var keyCode = evt.which ? evt.which : evt.keyCode;
        var accept = '0123456789';
        if (accept.indexOf(String.fromCharCode(keyCode)) >= 0) {
            return true;
        } else {
            return false;
        }
    }

    function verifLetter(evt) {
        var keyCode = evt.which ? evt.which : evt.keyCode;
        var accept = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJLMNOPQRSTUVWXYZ./*-+';
        if (accept.indexOf(String.fromCharCode(keyCode)) >= 0) {
            return true;
        } else {
            return false;
        }
    }</script>

    <head>
        <style>
            body {
                background-color: grey;
            }

            .bloc {
                background-color: white;
                border: 3px solid black;
                border-radius: 13px;
                box-shadow: 3px 3px 1px rgba(0,0,0,0.5);
                padding: 10px 10px 10px 10px;
            }
        </style>
        <link href="https://fonts.googleapis.com/css?family=Nanum+Myeongjo&display=swap" rel="stylesheet">
    </head>

<article class="container mt-5">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10 bloc">
            <form method="post" action="/Admin/Index">

                <h2>Ajouter Utilisateur :</h2>
                <hr style="border-bottom:2px solid black" />
                <div class="form-group row">
                    <label class="col-2" for="l_prenom">Prénom : </label>
                    <input class="col-3" type="text" id="i_prenom" name="prenom" onkeypress="return verifLetter(event)" />
                </div>

                <div class="form-group row">
                    <label class="col-2" for="l_nom">Nom :</label>
                    <input class="col-3" type="text" id="i_nom" name="nom" onkeypress="return verifLetter(event)" />
                </div>

                <div class="form-group row">
                    <label class="col-2" for="l_login">Login :</label>
                    <input class="col-3" type="text" id="i_login" name="login" />
                </div>

                <div class="form-group row">
                    <label class="col-2"for="l_password">Password  :</label>
                    <input class="col-3" type="password" id="i_password" name="password" />
                </div>


                <div class="form-group row">
                    <label class="col-2" for="l_admin">Administrateur : </label>
                    <div class="col-3" style="padding-left:0px">
                        <input type="radio" id="adminN" name="admin" checked="checked" value="No" />
                        <label for="l_adminN">Non</label>
                        <input type="radio" id="adminY" name="admin" value="Yes" />
                        <label for="l_adminY">Oui</label>
                    </div>
                </div>

                <div style="margin-top:10px;width:auto;height:auto" class="col text-right">
                    <input type="submit" class="btn btn-primary" name="validate" value="Valider" style="" />
                </div>
            </form>
        </div>
    </div>
</article>
    